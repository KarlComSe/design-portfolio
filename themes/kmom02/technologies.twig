{% include 'incl/header.twig' %}

<body {% if config.session.theme == "dark" %}
class="dark"
{% else %}
class="standard"
{% endif %}>
    {% include 'incl/nav.twig' %}
    <div class="main" role="main">
            {% if meta.subnav %}
            <div class="sub-page">
                {% include 'incl/subnav.twig' %}
                <div class="box">
                    {{ content }}
